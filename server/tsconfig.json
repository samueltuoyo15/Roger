{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2022",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "paths": {
      "@/*": ["./*"],
      "@/routes/*": ["./routes/*"],
      "@/middlewares/*": ["./middlewares/*"],
      "@/config/*": ["./config/*"],
      "@/models/*": ["./models/*"],
      "@/controllers/*": ["./controllers/*"],
      "@/utils/*": ["./utils/*"],
      "@/services/*": ["./services/*"],
    },
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    
  },
  "include": [ "types/**/*.d.ts", "**/*"],
  "exclude": ["node_modules"]
}